<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:src="@drawable/gene"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the name of the movie below:"/>

    <EditText
        android:id="@+id/et_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the year of the movie below:"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_movie_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/search_button_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Search"
        android:layout_gravity="center_horizontal" />

</LinearLayout>